<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/anuncioLayout"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:background="#93FFDD"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgAnuncio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ft_padrao"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloAnucio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dhjdujdjdjdnd djdjdjjdjdjdjjdjdjdjdj"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtValorAnuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="R$ 18,00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
